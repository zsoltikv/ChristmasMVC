@model List<ChristmasRecipes.Models.Recipes>
@{
    ViewData["Title"] = "All Recipes";
}

<section class="page-header">
    <div class="container">
        <h1 class="page-title">🍪 All Christmas Recipes</h1>
        <p class="page-subtitle">Discover our complete collection of festive treats</p>
    </div>
</section>

<section class="recipes-page">
    <div class="search">
        <div class="search-field">
            <form method="get" class="recipe-search">
                <input
                    type="text"
                    name="search"
                    value="@Context.Request.Query["search"]"
                    placeholder="Search recipes..."
                    class="search-input"
                />
            </form>

            <a href="/Recipes" class="search-clear">
                Clear search
            </a>
        </div>

        <h3 class="section-title">
            Found @Model.Count recipe(s)
        </h3>
    </div>

    <div class="container">
        <div class="recipe-grid">
            @foreach (var recipe in Model)
            {
                <partial name="_RecipeCard" model="recipe" />
            }
        </div>
    </div>
</section>
