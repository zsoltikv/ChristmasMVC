<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Christmas Recipes</title>

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/christmas-theme.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700;900&family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
</head>
<body>

    <!-- Snowflakes Animation -->
    <div class="snowflakes" aria-hidden="true">
        @for (int i = 0; i < 20; i++)
        {
            <div class="snowflake">❄</div>
        }
    </div>

    <!-- HEADER + NAVBAR -->
    <header class="site-header">
        <nav class="navbar">
            <div class="nav-container">
                <a class="nav-logo" asp-controller="Home" asp-action="Index">
                    🎄 ChristmasMVC
                </a>

                <button class="nav-toggle" id="navToggle" aria-label="Toggle menu">
                    ☰
                </button>

                <ul class="nav-menu" id="navMenu">
                    <li>
                        <a asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li>
                        <a asp-controller="Recipes" asp-action="Index">Recipes</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- MAIN CONTENT -->
    <main class="main-content">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <!-- Logo & Description -->
                <div class="footer-section">
                    <a href="/" class="footer-logo" style="display:flex; align-items:center; gap:0.8rem; text-decoration:none;">
                        <span style="font-size:2.5rem;">🎄</span>
                        <span style="font-size:1.5rem; color: var(--christmas-gold); font-weight:700;">Christmas Recipes</span>
                    </a>
                    <p style="margin-top:1rem; color:#ccc; line-height:1.6;">Bringing joy to your holiday baking since 2024. Get festive recipes, tips, and inspiration all season long!</p>
                    <div style="margin-top:1.5rem; display:flex; gap:1rem;">
                        <a href="#" style="font-size:1.5rem; color:#fff; transition:color 0.3s;">🐦</a>
                        <a href="#" style="font-size:1.5rem; color:#fff; transition:color 0.3s;">📘</a>
                        <a href="#" style="font-size:1.5rem; color:#fff; transition:color 0.3s;">📸</a>
                    </div>
                </div>

                <!-- Quick Links -->
                <div class="footer-section">
                    <h4 style="color:var(--christmas-gold); margin-bottom:1rem;">Quick Links</h4>
                    <ul style="list-style:none; padding:0;">
                        <li><a href="/" style="color:#ccc; text-decoration:none; display:block; margin-bottom:0.5rem;">Home</a></li>
                        <li><a href="/Recipes" style="color:#ccc; text-decoration:none; display:block; margin-bottom:0.5rem;">All Recipes</a></li>
                    </ul>
                </div>

                <!-- Categories -->
                <div class="footer-section">
                    <h4 style="color:var(--christmas-gold); margin-bottom:1rem;">Categories</h4>
                    <ul style="list-style:none; padding:0;">
                        <li><a href="/Recipes/Category/1" style="color:#ccc; text-decoration:none; display:block; margin-bottom:0.5rem;">Cookies</a></li>
                        <li><a href="/Recipes/Category/2" style="color:#ccc; text-decoration:none; display:block; margin-bottom:0.5rem;">Desserts</a></li>
                        <li><a href="/Recipes/Category/3" style="color:#ccc; text-decoration:none; display:block; margin-bottom:0.5rem;">Drinks</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <!-- Footer Bottom Full Width -->
    <div class="footer-bottom-fullwidth">
        <p>&copy; 2024 Christmas Recipes. Made with ❤️ for the holidays</p>
    </div>

    <script src="~/js/site.js"></script>
    <script src="~/js/animations.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
