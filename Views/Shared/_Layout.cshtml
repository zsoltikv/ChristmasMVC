<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Christmas Recipes</title>

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/christmas-theme.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700;900&family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
</head>
<body>

    <!-- Snowflakes Animation -->
    <div class="snowflakes" aria-hidden="true">
        @for (int i = 0; i < 20; i++)
        {
            <div class="snowflake">❄</div>
        }
    </div>

    <!-- HEADER + NAVBAR -->
    <header class="site-header">
        <nav class="navbar">
            <div class="nav-container">
                <a class="nav-logo" asp-controller="Home" asp-action="Index">
                    🎄 ChristmasMVC
                </a>

                <button class="nav-toggle" id="navToggle" aria-label="Toggle menu">
                    ☰
                </button>

                <ul class="nav-menu" id="navMenu">
                    <li>
                        <a asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li>
                        <a asp-controller="Recipes" asp-action="Index">Recipes</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- MAIN CONTENT -->
    <main class="main-content">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>🎄 Christmas Recipes</h3>
                    <p>Bringing joy to your holiday baking since 2024</p>
                </div>
                <div class="footer-section">
                    <h4>Quick Links</h4>
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li><a href="/Recipes">All Recipes</a></li>
                        <li><a href="/Home/About">About Us</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4>Categories</h4>
                    <ul>
                        <li><a href="/Recipes/Category/1">Cookies</a></li>
                        <li><a href="/Recipes/Category/2">Desserts</a></li>
                        <li><a href="/Recipes/Category/3">Drinks</a></li>
                    </ul>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2024 Christmas Recipes. Made with ❤️ for the holidays</p>
            </div>
        </div>
    </footer>

    <script src="~/js/site.js"></script>
    <script src="~/js/animations.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
